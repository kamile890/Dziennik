<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dodawanie_nauczyciela_a">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Adres e-mail"
        android:textSize="18sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <EditText
        android:id="@+id/login_nauczyciela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:width="200dp"
        android:height="5dp"
        android:ems="10"
        android:hint="Adres e-mail"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:text="Imię"
        android:textSize="18sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <EditText
        android:id="@+id/imie_nauczyciela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="170dp"
        android:width="200dp"
        android:height="10dp"
        android:ems="10"
        android:hint="Imie"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:text="Nazwisko"
        android:textSize="18sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <EditText
        android:id="@+id/nazwisko_nauczyciela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="110dp"
        android:width="200dp"
        android:height="10dp"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="textPersonName" />




    <TextView
        android:id="@+id/teskt_spinner_przedmiot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="15dp"
        android:text="Wybierz przedmiot"
        android:textSize="18sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <Spinner
        android:id="@+id/spinner_przedmiot"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/dodaj_przedmiot_do_listy_btn"
        android:layout_toLeftOf="@+id/dodaj_przedmiot_do_listy_btn" />

    <Button
        android:id="@+id/dodaj_przedmiot_do_listy_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="126dp"
        android:text="Dodaj" />

    <Button
        android:id="@+id/dodaj_nauczyciela_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="203dp"
        android:layout_marginRight="203dp"
        android:text="Dodaj nauczyciela"
        android:background="@color/kolorTlaPrzycisku"
        android:textColor="@color/jasnyKolorTekstu"
        android:width="150dp"
        android:height="60dp"/>

    <TextView
        android:id="@+id/tekst_lista_przedmiotow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="250dp"
        android:layout_marginRight="250dp"
        android:text="Lista przedmiotów:"
        android:textSize="15sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <Spinner
        android:id="@+id/spinner_klasa"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/dodaj_klase_do_listy_btn"
        android:layout_toLeftOf="@+id/dodaj_klase_do_listy_btn" />

    <Button
        android:id="@+id/dodaj_klase_do_listy_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="250dp"
        android:layout_marginRight="40dp"
        android:text="Dodaj" />

    <TextView
        android:id="@+id/tekst_spinner_klasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="15dp"
        android:text="Wybierz klase"
        android:textSize="18sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <TextView
        android:id="@+id/tekst_lista_klas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:text="Lista klas:"
        android:textSize="15sp"
        android:textColor="@color/ciemnyKolorTekstu"/>

    <ListView
        android:id="@+id/lista_przedmiotow"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp" />

    <ListView
        android:id="@+id/lista_klas"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@+id/lista_przedmiotow"
        android:layout_toRightOf="@+id/lista_przedmiotow" />


</RelativeLayout>
</ScrollView>