<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dodawanie_uwagi_n">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Wybierz klasę"
                android:textSize="24sp"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <Spinner
                android:id="@+id/spinner_klasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:textColor="@color/ciemnyKolorTekstu"></Spinner>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:text="Wybierz przedmiot"
                android:textSize="24sp"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <Spinner
                android:id="@+id/spinner_przedmioty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:textColor="@color/ciemnyKolorTekstu"></Spinner>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"
                android:text="Wybierz ucznia"
                android:textSize="24sp"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <Spinner
                android:id="@+id/spinner_uczniowie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="255dp"
                android:textColor="@color/ciemnyKolorTekstu"></Spinner>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:layout_marginLeft="30dp"
                android:textSize="24sp"
                android:text="Uwaga za"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="355dp"
                android:width="130dp"
                android:height="60dp"
                android:hint="Za co jest uwaga?"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="325dp"
                android:layout_marginLeft="240dp"
                android:textSize="24sp"
                android:text="Treść"
                android:textColor="@color/ciemnyKolorTekstu"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="355dp"
                android:width="130dp"
                android:height="120dp"
                android:hint="Treść uwagi"
                android:padding="10sp"
                android:paddingTop="10sp"
                android:textColor="@color/ciemnyKolorTekstu" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="490dp"
                android:width="150dp"
                android:height="60dp"
                android:text="Dodaj uwagę"
                android:background="@color/kolorTlaPrzycisku"
                android:textColor="@color/jasnyKolorTekstu"
                />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>