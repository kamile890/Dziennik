<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edycja_opiekuna_a">

    <TextView
        android:id="@+id/lista_opikunow_Text_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Lista opiekunów:"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner_opiekunow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"></Spinner>

    <EditText
        android:id="@+id/imie_opiekuna_EditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:hint="Wpisz imię opiekuna"/>

    <EditText
        android:id="@+id/nazwisko_opiekuna_EditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:hint="Wpisz nazwisko opiekuna"/>

    <EditText
        android:id="@+id/telefon_opiekuna_EditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="Wpisz telefon opiekuna"/>

    <Button
        android:id="@+id/zapisz_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Zapisz"/>

    <Spinner
        android:id="@+id/spinner_uczniow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/lista_uczniow_ListView"
        android:layout_toLeftOf="@+id/lista_uczniow_ListView"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/lista_uczniow_ListView"
        android:layout_toLeftOf="@+id/lista_uczniow_ListView"
        android:text="Uczniowie bez opiekuna" />

    <Button
        android:id="@+id/dodaj_ucznia_do_listy_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toStartOf="@+id/lista_uczniow_ListView"
        android:layout_toLeftOf="@+id/lista_uczniow_ListView"
        android:text="Dodaj" />

    <ListView
        android:id="@+id/lista_uczniow_ListView"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"></ListView>

    <TextView
        android:id="@+id/pesel_textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/lista_uczniow_ListView"
        android:layout_toLeftOf="@+id/lista_uczniow_ListView"
        android:textSize="16sp"/>


</RelativeLayout>